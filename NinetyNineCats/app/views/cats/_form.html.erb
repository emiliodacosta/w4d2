<% if action == :edit %>
  <% action_url = cat_url(cat)%>
<% else %>
    <% action_url = cats_url %>
<% end %>



<form action="<%= cats_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

  <br>

  <label for="birth_date">Date of Birth</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">

  <br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled>-- Please Select --</option>
    <option value="brown" <%= cat.color == "brown" ? "selected" : ""%>>Brown</option>
    <option value="black" <%= cat.color == "black" ? "selected" : ""%>>Black</option>
    <option value="gray" <%= cat.color == "gray" ? "selected" : ""%>>Gray</option>
    <option value="white" <%= cat.color == "white" ? "selected" : ""%>>White</option>
    <option value="orange" <%= cat.color == "orange" ? "selected" : ""%>>Orange</option>
  </select>

  <br>

  <input type="radio" name="cat[sex]" value='M' id="cat_sex_male">
  <label for="cat_sex_male">Male</label>

  <input type="radio" name="cat[sex]" value='F' id="cat_sex_female">
  <label for="cat_sex_female">Female</label>

  <br>

  <label for="Description">Description</label>
  <textarea name="cat[description]">
    <%= cat.description %>
  </textarea>

  <input type="submit" value="<%= action == :edit ? 'update cat' : 'add cat'%>">

</form>
